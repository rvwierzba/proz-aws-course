def decode(message_file):
  """
  Decodes a message from a file where words are associated with numbers
  and arranged in a pyramid based on ascending number order.

  Args:
    message_file: Path to the text file containing the encoded message.

  Returns:
    The decoded message as a string.
  """
  with open(message_file, "r") as f:
    # Read lines and separate numbers from words
    lines = [line.split() for line in f.readlines()]
    numbers, words = zip(*lines)

  # Sort numbers (smallest to biggest) and find their original positions
  sorted_numbers = sorted(enumerate(numbers), key=lambda x: x[1])
  original_positions = [i for i, (_, _) in sorted_numbers]

  # Extract message words based on original positions
  message = [words[i] for i in original_positions]

  # Join message words and return the decoded string
  return " ".join(message)

# Example usage
decoded_message = decode("example.txt")
print(decoded_message)
